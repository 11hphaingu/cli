{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es2021",
    "outDir": "./dist/cjs",
    "declaration": true,
    // "declarationMap": true,
    // "declarationDir": "dist/_types",
    "lib": [
      "es2019"
    ],
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      // "reflect-metadata"
    ],
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "core/**/*",
    "ports/**/*",
    "__test__/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "__test__/**/*.spec-cancel.ts",
    "./dist"
  ]
}
