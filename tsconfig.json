{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es2021",
    "outDir": "./dist/cjs",
    "declaration": true,
    "lib": [
      "es2019",
      "DOM"
    ],
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "core/**/*",
    "ports/**/*",
    "impl/**/*",
    "__test__/**/*",
    "app.ts"
  ],
  "exclude": [
    "__test__/**/*.spec-cancel.ts",
    "./dist"
  ]
}
